<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              >

    <android.support.v7.widget.CardView
        android:id="@+id/item_survey_CV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_survey_RL"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:layout_width="60dp"
                app:srcCompat="@drawable/weekday"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/item_survey_iv"
                android:layout_height="60dp"
                />

            <TextView
                android:text="20160202西单换乘量调查"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_survey_iv"
                android:id="@+id/item_survey_titleTV"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_survey_titleTV"
                android:layout_below="@+id/item_survey_titleTV"
                android:id="@+id/item_survey_taskRL"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:text="任务："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_survey_taskTagTV"
                    />

                <TextView
                    android:text="换乘通道A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_survey_taskTagTV"
                    android:layout_toEndOf="@+id/item_survey_taskTagTV"
                    android:id="@+id/item_survey_taskTV"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_survey_timeRL"
                android:layout_below="@+id/item_survey_taskRL"
                android:layout_alignLeft="@+id/item_survey_taskRL"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:text="时间："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_survey_timeTagTV"
                    />

                <TextView
                    android:text="07:00~09:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_survey_timeTV"
                    android:layout_toRightOf="@+id/item_survey_timeTagTV"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/common_icon_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:id="@+id/imageView3"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
