<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:id="@+id/personCenter_rootRL">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/personCenter_taskRL"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/personCenter_personInfoCV"
        android:layout_alignStart="@+id/personCenter_personInfoCV"
        android:layout_alignEnd="@+id/personCenter_personInfoCV"
        android:background="@color/white"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            app:srcCompat="@drawable/task"
            android:layout_marginStart="21dp"
            android:id="@+id/personCenter_taskIV"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="我的任务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/personCenter_taskTagTV"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/personCenter_taskIV"
            android:layout_centerInParent="true"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/common_icon_arrow"
            android:layout_marginEnd="12dp"
            android:id="@+id/personCenter_taskArrowIV"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personCenter_personInfoCV"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/personCenter_persionInfoRL">

            <ImageView
                app:srcCompat="@drawable/avatar"
                android:id="@+id/personCenter_avatraIV"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:text="小凡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personCenter_usernameTV"
                android:layout_marginStart="36dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/personCenter_avatraIV"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/common_icon_arrow"
                android:layout_marginEnd="12dp"
                android:id="@+id/personCenter_personArrowIV"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/personCenter_noticeRL"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/personCenter_taskRL"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="30dp"
            app:srcCompat="@drawable/notice"
            android:layout_marginStart="21dp"
            android:id="@+id/personCenter_noticeIV"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="我的通知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/personCenter_noticeTagTV"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/personCenter_noticeIV"
            android:layout_centerInParent="true"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/common_icon_arrow"
            android:layout_marginEnd="12dp"
            android:id="@+id/personCenter_noticeArrowIV"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
