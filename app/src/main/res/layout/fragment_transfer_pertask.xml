<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/transfer_pertask_nameRL"
            style="@style/settingStyle"
            android:clickable="true" >

            <TextView
                android:id="@+id/transfer_pertask_nameTagTV"
                style="@style/psTvStyleTag"
                android:text="名称" />

            <ImageView
                android:id="@+id/transfer_pertask_nameIV"
                style = "@style/psIvStyle"/>

            <TextView
                android:id="@+id/transfer_pertask_nameTV"
                style="@style/psTvStyle"
                android:layout_toLeftOf="@+id/transfer_pertask_nameIV"
                android:text="20171011知春路换乘量调查" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transfer_pertask_dateRL"
            style="@style/settingStyle"
            android:clickable="true" >

            <TextView
                android:id="@+id/transfer_pertask_dateTagTV"
                style="@style/psTvStyleTag"
                android:text="调查日期" />

            <ImageView
                android:id="@+id/transfer_pertask_dateIV"
                style = "@style/psIvStyle"/>

            <TextView
                android:id="@+id/transfer_pertask_dateTV"
                style="@style/psTvStyle"
                android:layout_toLeftOf="@+id/transfer_pertask_dateIV"
                android:text="2017-10-11" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transfer_pertask_startTimeRl"
            style="@style/settingStyle"
            android:clickable="true" >

            <TextView
                android:id="@+id/transfer_pertask_startTimeTagTV"
                style="@style/psTvStyleTag"
                android:text="开始时间" />

            <ImageView
                android:id="@+id/transfer_pertask_startTimeIV"
                style = "@style/psIvStyle"/>

            <TextView
                android:id="@+id/transfer_pertask_startTimeTV"
                style="@style/psTvStyle"
                android:layout_toLeftOf="@+id/transfer_pertask_startTimeIV"
                android:text="13:00" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transfer_pertask_endTimeRl"
            style="@style/settingStyle"
            android:clickable="true" >

            <TextView
                android:id="@+id/transfer_pertask_endTimeTagTV"
                style="@style/psTvStyleTag"
                android:text="结束时间" />

            <ImageView
                android:id="@+id/transfer_pertask_endTimeIV"
                style = "@style/psIvStyle"/>

            <TextView
                android:id="@+id/transfer_pertask_endTimeTV"
                style="@style/psTvStyle"
                android:layout_toLeftOf="@+id/transfer_pertask_endTimeIV"
                android:text="15:00" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transfer_pertask_weekdayRl"
            style="@style/settingStyle"
            android:clickable="true" >

            <TextView
                android:id="@+id/transfer_pertask_weekdayTagTV"
                style="@style/psTvStyleTag"
                android:text="是否工作日" />

            <ImageView
                android:id="@+id/transfer_pertask_weekdayIV"
                style = "@style/psIvStyle"
                />

            <TextView
                android:id="@+id/transfer_pertask_weekdayTV"
                style="@style/psTvStyle"
                android:layout_toLeftOf="@+id/transfer_pertask_weekdayIV"
                android:text="是" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="分任务列表"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <ListView
            android:id="@+id/transfer_pertask_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:fadingEdge="none"
            android:headerDividersEnabled="false"
            android:footerDividersEnabled="false"
            android:dividerHeight="10dp"/>

    </LinearLayout>


</RelativeLayout>
